<%- include('partials/navbar', { page: '/register' }) %>

<div class="container mx-auto py-8 max-w-md">
  <h1 class="text-3xl font-bold mb-6">Register</h1>

  <% if (!successMessage) { %>
  <form action="/register" method="POST" class="space-y-4">
    <input required type="text" name="userName" placeholder="User Name"
           class="input input-bordered w-full" value="<%= userName %>" />
    <input required type="password" name="password" placeholder="Password"
           class="input input-bordered w-full" />
    <input required type="password" name="password2" placeholder="Confirm Password"
           class="input input-bordered w-full" />
    <input required type="email" name="email" placeholder="Email Address"
           class="input input-bordered w-full" />
    <button type="submit" class="btn btn-primary w-full">Register</button>
  </form>
  <% } %>

  <% if (errorMessage) { %>
  <div class="alert alert-error mt-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
    <span><%= errorMessage %></span>
  </div>
  <% } %>

  <% if (successMessage) { %>
  <div class="alert mt-6">
    <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
    <span><%= successMessage %></span>
  </div>
  <br />
  <a href="/login" class="btn btn-success w-full">Proceed to Log in</a>
  <% } %>
</div>
