<link rel="stylesheet" href="/css/site.css">

<%- include('partials/navbar', { page: '/solutions/projects' }) %>

<div class="container mx-auto py-8">
  <h1 class="text-4xl font-bold mb-6 text-center">All Projects</h1>

  <div class="grid gap-6 md:grid-cols-2 lg:grid-cols-3">
    <% projects.forEach(project => { %>
      <div class="card bg-base-100 shadow-xl">
        <figure><img src="<%= project.feature_img_url %>" alt="<%= project.title %>" /></figure>
        <div class="card-body">
          <h2 class="card-title"><%= project.title %></h2>
          <p><%= project.summary_short %></p>
          <p class="text-sm text-gray-500 mt-2">Sector: <%= project.Sector.sector_name %></p>
          <div class="card-actions justify-end mt-4">
            <a href="/solutions/editProject/<%= project.id %>" class="btn btn-success btn-sm">Edit</a>
            <a href="<%= project.original_source_url %>" target="_blank" class="btn btn-info btn-sm">Source</a>
          </div>
        </div>
      </div>
    <% }) %>
  </div>
</div>
