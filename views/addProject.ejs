<%- include('partials/navbar', { page: '/solutions/addProject' }) %>

<div class="container mx-auto py-8">
  <h1 class="text-4xl font-bold text-center mb-8">Add Project</h1>

  <form action="/solutions/addProject" method="POST" class="max-w-xl mx-auto space-y-6">
    
    <div>
      <label class="label">Title</label>
      <input required type="text" name="title" class="input input-bordered w-full" />
    </div>

    <div>
      <label class="label">Feature Image URL</label>
      <input required type="url" name="feature_img_url" class="input input-bordered w-full" />
    </div>

    <div>
      <label class="label">Sector</label>
      <select name="sector_id" required class="select select-bordered w-full">
        <% sectors.forEach(sector => { %>
          <option value="<%= sector.id %>"><%= sector.sector_name %></option>
        <% }) %>
      </select>
    </div>

    <div>
      <label class="label">Intro (Short)</label>
      <textarea required name="intro_short" class="textarea textarea-bordered w-full"></textarea>
    </div>

    <div>
      <label class="label">Summary (Short)</label>
      <textarea required name="summary_short" class="textarea textarea-bordered w-full"></textarea>
    </div>

    <div>
      <label class="label">Impact</label>
      <textarea required name="impact" class="textarea textarea-bordered w-full"></textarea>
    </div>

    <div>
      <label class="label">Original Source URL</label>
      <input required type="url" name="original_source_url" class="input input-bordered w-full" />
    </div>

    <div class="text-center">
      <button type="submit" class="btn btn-primary">Add Project</button>
    </div>
  </form>
</div>
